<package>
    <description brief="Python library for interacting with HERB.">
        Python library for interacting with HERB through OpenRAVE. HERB is a
        bimanual mobile manipulator developed by the Personal Robotics Lab at
        Carnegie Mellon University.
    </description>
    <author>Michael Koval, Pras Velagapudi</author>
    <license>BSD</license>
    <review status="released" notes="approved on 3/13"/>
    <rosdep name="ipython"/>
    <depend package="rospy"/>
    <depend package="prpy"/>
    <depend package="openrave"/>
    <depend package="manipulation2"/>
    <depend package="herb_description"/>
    <export>
        <openrave optional="herb_databases"/>
        <!-- viewers -->
        <openrave optional="or_rviz"/>
        <!-- planners -->
        <openrave optional="cbirrt2"/>
        <openrave optional="orcdchomp"/>
        <!-- controllers -->
        <openrave optional="or_owd_controller"/>
        <openrave optional="or_segway_controller"/>
        <openrave optional="or_navigation_controller"/>
        <!-- sensors -->
        <openrave optional="or_handstate_sensor"/>
        <openrave optional="or_marker_sensorsystem"/>
        <openrave optional="or_handstate_sensor"/>
        <openrave optional="or_barrett_ft_sensor"/>
        <!-- utilities -->
        <openrave optional="or_talker_module"/>
        <openrave optional="or_mac_trajectory"/>
        <!-- standard kinbodies -->
        <openrave optional="pr_ordata"/>
    </export>
</package>
